<phone:PhoneApplicationPage
    x:Class="Zebra.WPApp.Pages.Begin.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SupportedOrientations="Portrait" Orientation="Portrait"
	xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    toolkit:TiltEffect.IsTiltEnabled="True"
    shell:SystemTray.IsVisible="False">
    <toolkit:TransitionService.NavigationInTransition>
        <toolkit:NavigationInTransition>
            <toolkit:NavigationInTransition.Backward>
                <toolkit:TurnstileFeatherTransition Mode="BackwardIn"/>
            </toolkit:NavigationInTransition.Backward>
            <toolkit:NavigationInTransition.Forward>
                <toolkit:TurnstileFeatherTransition Mode="ForwardIn"/>
            </toolkit:NavigationInTransition.Forward>
        </toolkit:NavigationInTransition>
    </toolkit:TransitionService.NavigationInTransition>
    <toolkit:TransitionService.NavigationOutTransition>
        <toolkit:NavigationOutTransition>
            <toolkit:NavigationOutTransition.Backward>
                <toolkit:TurnstileFeatherTransition Mode="BackwardOut"/>
            </toolkit:NavigationOutTransition.Backward>
            <toolkit:NavigationOutTransition.Forward>
                <toolkit:TurnstileFeatherTransition Mode="ForwardOut"/>
            </toolkit:NavigationOutTransition.Forward>
        </toolkit:NavigationOutTransition>
    </toolkit:TransitionService.NavigationOutTransition>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/FondoF.png" Stretch="UniformToFill" AlignmentX="Left" Opacity="0.35"></ImageBrush>
        </Grid.Background>
        <Grid Width="432" HorizontalAlignment="Left" Margin="12,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                toolkit:TurnstileFeatherEffect.FeatheringIndex="0"
                Foreground="{StaticResource PhoneForegroundBrush}" 
                Grid.ColumnSpan="4" 
                HorizontalAlignment="Center" 
                Text="{Binding LocalizedResources.TxbMenu, Mode=OneWay, Source={StaticResource LocalizedStrings}}" 
                Margin="24"
                Opacity="0.7"
                FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"/>
            <toolkit:HubTile Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="1"
                            Tap="btnTraffic_Tap"
                            Margin="12,12,0,0"
                            Title="{Binding LocalizedResources.TileWhatsGoingOn, Mode=OneWay, Source={StaticResource LocalizedStrings}}"
                            GroupTag="Sizes"
                            Size="Large" Background="#FF009E00"/>
            <toolkit:HubTile Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="7"
                            Tap="btnPlaces_Tap"
                            Margin="12,-24,0,0"
                            Title="{Binding LocalizedResources.TilePlaces, Mode=OneWay, Source={StaticResource LocalizedStrings}}"
                            GroupTag="Sizes"
                            Size="Medium" Background="#FFA300AB"/>
            <toolkit:HubTile Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2"
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="2"
                            Tap="btnWallet_Tap"
                            Margin="12,12,0,0"
                            Title="{Binding LocalizedResources.TileWallet, Mode=OneWay, Source={StaticResource LocalizedStrings}}"
                            Notification="w/fixings"
                            DisplayNotification="True"
                            GroupTag="Sizes"
                            Size="Medium" Background="#FFE51400"/>
            <toolkit:HubTile Grid.Row="2" Grid.Column="0" 
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="4"
                            Margin="12,-21,0,0"
                            Title="Zebra"
                            Message="&quot;Just an amazing work by the chef&quot;"
                            GroupTag="Sizes"
                             Tap="btnZebra_Tap"
                            Size="Small" Background="#FFFA6800"/>
            <toolkit:HubTile Grid.Row="2" Grid.Column="1"
                             x:Name="btnSettings"
                             Tap="btnSettings_Tap"
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="3"
                            Margin="12,-21,0,0"
                            Source="/Assets/Icons/ApplicationBar.settings.png"
                            Message="@ a great cafe"
                            GroupTag="Sizes"
                            Size="Small" Background="#FF007ACC"/>
            <toolkit:HubTile Grid.Row="4" Grid.Column="2" 
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="6"
                            Margin="12,10,0,0"
                            Source="/Images/Beignets.jpg"
                            Title="Beignets"
                            Notification="New&#x0d;&#x0a;Orleans"
                            DisplayNotification="True"
                            GroupTag="Sizes"
                            Size="Small"/>
            <toolkit:HubTile Grid.Row="4" Grid.Column="3" 
                             toolkit:TurnstileFeatherEffect.FeatheringIndex="5"
                            Margin="12,10,0,0"
                            Source="/Images/Dessert.jpg"
                            Title="Beignets"
                            Notification="New&#x0d;&#x0a;Orleans"
                            DisplayNotification="True"
                            GroupTag="Sizes"
                            Size="Small" Background="#FF007ACC"/>
        </Grid>
    </Grid>
</phone:PhoneApplicationPage>